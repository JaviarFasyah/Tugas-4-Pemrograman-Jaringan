{{ define "index" }}
{{ template "header" }}
    <table border="1">
      <thead>
      <tr>
        <td>Nama</td>
        <td>Email</td>
        <td>No Telp</td>
        <td>Alamat</td>
        <td>Aksi</td>
      </tr>
       </thead>
       <tbody>
    {{ range . }}
      <tr>
        <td> {{ .Nama }} </td>
        <td>{{ .Email }} </td> 
        <td>{{ .NoTlp }}</td>
        <td>{{ .Alamat }}</td>
        <td>
          <a href="/edit?id={{ .ID }}">Edit</a> | 
          <a href="/delete?id={{ .ID }}" onclick="return confirm('You are going to delete {{ .Nama }}, are you sure?')" >Delete</a>
        </td>
      </tr>
    {{ end }}
       </tbody>
    </table>
{{ template "footer" }}
{{ end }}